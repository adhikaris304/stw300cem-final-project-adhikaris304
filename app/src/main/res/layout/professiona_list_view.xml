<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight=".25"
            android:id="@+id/image"
            android:layout_width="72dp"
            android:layout_height="72dp" />

        <LinearLayout
            android:layout_weight=".30"
            android:id="@+id/text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="16dp">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_rating1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_rating" />

                <ImageView
                    android:id="@+id/image_rating2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_rating" />

                <ImageView
                    android:id="@+id/image_rating3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_rating" />

                <ImageView
                    android:id="@+id/image_rating4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_rating" />

                <ImageView
                    android:id="@+id/image_rating5"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_rating" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignBottom="@+id/image"
            android:layout_toEndOf="@+id/text_container"
            android:layout_toRightOf="@+id/text_container"
            android:layout_weight=".45"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/call_iconview"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_margin="4dp"
                android:layout_toRightOf="@+id/text_container"
                android:src="@drawable/call_icon" />

            <ImageView
                android:id="@+id/message_iconview"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_margin="4dp"
                android:src="@drawable/message_icon" />

            <ImageView
                android:id="@+id/notification_iconview"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_margin="4dp"
                android:src="@drawable/notification_icon" />

            <ImageView
                android:id="@+id/email_iconview"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_margin="4dp"
                android:src="@drawable/email_icon" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>